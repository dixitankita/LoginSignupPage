<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>

  </head>
  <body>
   <div class="login h-screen flex flex-col items-center text-white bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900 p-10">
 
  <div class="status flex space-x-4 mb-6 px-5 py-3 rounded-lg bg-gray-700 shadow-lg">
    <a
      href="/login"
      class="text-lg font-semibold px-4 py-2 rounded-lg bg-blue-500 hover:bg-blue-600 transition duration-300 shadow-md"
    >
      Log In
    </a>
    <a
      href="/signup"
      class="text-lg font-semibold px-4 py-2 rounded-lg bg-green-500 hover:bg-green-600 transition duration-300 shadow-md"
    >
     Sign Up
    </a>
  </div>

  <div
    class="form h-auto w-1/3 max-w-md bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center space-y-4"
  >
    <form action="/login" class="w-full" method="post">
     
      <div class="flex flex-col space-y-2 items-center">
        <input
          class="rounded-lg mt-2 py-3 px-4 w-4/5 bg-gray-900 text-white placeholder-gray-400 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
          type="text"
          name="name"
          placeholder="Enter Your Name"
        />
     
        <input
          class="rounded-lg mt-2 py-3 px-4 w-4/5 bg-gray-900 text-white placeholder-gray-400 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
          type="password"
          name="password"
          placeholder="Enter Your Password"
        />
      
        <input
          class="inline-block mt-4 bg-blue-500 hover:bg-blue-600 text-white py-2 px-5 rounded-lg cursor-pointer transition duration-300 shadow-md"
          type="submit"
          value="Login"
        />
      </div>
    </form>
  </div>
</div>

  </body>
</html>